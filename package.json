{
  "name": "reposcribe",
  "displayName": "RepoScribe",
  "description": "Automatically generates and maintains a single Markdown file snapshot of your project's source code, perfect for LLM context, documentation, or code reviews.",
  "version": "0.3.2",
  "publisher": "vipin-tom-varghese",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vipintom/reposcribe.git"
  },
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other",
    "AI",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reposcribe.openOutputFile",
        "title": "RepoScribe: Open Output File"
      },
      {
        "command": "reposcribe.forceRebuild",
        "title": "RepoScribe: Force Rebuild"
      },
      {
        "command": "reposcribe.createConfigFile",
        "title": "RepoScribe: Create Configuration File"
      },
      {
        "command": "reposcribe.toggleAutoGeneration",
        "title": "RepoScribe: Pause/Resume Automatic Generation"
      },
      {
        "command": "reposcribe.copyFileContent",
        "title": "RepoScribe: Copy Output File Content"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm esbuild",
    "esbuild": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "esbuild:dev": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch:esbuild": "pnpm esbuild:dev --watch",
    "watch:tsc": "pnpm tsc --watch",
    "lint": "eslint .",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.89.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "generator-code": "^1.11.11",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.10.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "yo": "^5.1.0"
  },
  "dependencies": {
    "debounce-fn": "^6.0.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.1",
    "ignore": "^7.0.5"
  }
}
